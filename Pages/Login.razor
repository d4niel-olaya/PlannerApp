@using Microsoft.AspNetCore.Components
@layout LoginLayout
@page "/login"





<MudCard Outlined="false" Elevation="0">
    <MudCardContent>

            <MudText Typo="Typo.h3" Align="Align.Center" >Iniciar sesión</MudText>
            <div class="space-top">
                <MudTextField T="string" Label="Usuario" Variant="Variant.Outlined" Adornment="Adornment.End" AdornmentIcon="@Icons.Material.Filled.Person" />
            </div>
            <div class="space-top">
                <MudTextField T="string"  Label="Contraseña" Variant="Variant.Outlined" InputType="@PasswordInput" Adornment="Adornment.End" AdornmentIcon="@PasswordInputIcon" OnAdornmentClick="ButtonTestclick" AdornmentAriaLabel="Show Password" />
            </div>
            <MudButton Variant="Variant.Filled" FullWidth="true"  Style="@($"background:{Colors.LightGreen.Default};margin-top:1rem;")">Inicia sesión</MudButton>

            <MudText Typo="Typo.subtitle1" Align="Align.Center" class="space-top">No tienes una cuenta? <MudLink Href="#">Crea una</MudLink></MudText>
    </MudCardContent>
</MudCard>

@code {


    bool isShow;
    InputType PasswordInput = InputType.Password;

   
    string PasswordInputIcon = Icons.Material.Filled.VisibilityOff;
     void ButtonTestclick()
    {
        @if (isShow)
        {
            isShow = false;
            PasswordInputIcon = Icons.Material.Filled.VisibilityOff;
            PasswordInput = InputType.Password;
        }
        else {
            isShow = true;
            PasswordInputIcon = Icons.Material.Filled.Visibility;
            PasswordInput = InputType.Text;
        }
    }
}