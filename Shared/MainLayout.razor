@inherits LayoutComponentBase
@using PlannerApp.Components
<AuthorizeView>
    
    <Authorized>

        <MudThemeProvider />


        <MudDialogProvider />
        <MudSnackbarProvider />
        <MudLayout>
            <MudAppBar Style="background:#3AB394;color:white;">
                <MudIconButton Icon="@Icons.Material.Filled.Menu" Style="background:#3AB394;color:white;" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
                PlannerApp
            </MudAppBar>
            <MudDrawer @bind-Open="@_drawerOpen">
                <NavMenu/>
            </MudDrawer>
            <MudMainContent>
                @Body
            </MudMainContent>
        </MudLayout>
    </Authorized>
</AuthorizeView>
@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}